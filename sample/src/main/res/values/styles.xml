<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>

        <item name="android:editTextStyle">@style/AutocompleteEditText</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
    </style>

    <style name="HomeTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/HomeActionBar</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#009ee0</item>
        <item name="android:textColorPrimary">#404040</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="background">@color/tertiary</item>
    </style>

    <style name="HomeActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/secondary</item>
    </style>

    <style name="MyActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AutocompleteEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>
